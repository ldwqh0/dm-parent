    </repository>
    <snapshotRepository>
      <id>nexus-snapshots</id>
      <name>Nexus Snapshot Repository</name>
      <url>http://125.70.227.192:8081/repository/maven-snapshots/</url>
    </snapshotRepository>
  </distributionManagement>
</project>
