    <module>dm-security/dm-security-web</module>
    <module>dm-security/dm-oauth2-client-spring-boot-starter</module>
    <module>dm-security/dm-oauth2-resource-server-spring-boot-starter</module>
    <!-- <module>dm-gateway-server</module> -->
    <!--工作流相关-->
    <module>dm-activity/dm-activity-api</module>
    <module>dm-activity/dm-activity-jpa-impl</module>
    <module>dm-workflow/dm-workflow-api</module>
    <module>dm-workflow/dm-workflow-jpa-impl</module>
  </modules>
  <packaging>pom</packaging>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.springframework.cloud</groupId>
        <artifactId>spring-cloud-dependencies</artifactId>
        <version>${spring.cloud.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>${springboot.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-web</artifactId>
        <exclusions>
          <exclusion>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-tomcat</artifactId>
          </exclusion>
        </exclusions>
        <version>${springboot.version}</version>
      </dependency>
      <dependency>
        <groupId>javax.persistence</groupId>
        <artifactId>javax.persistence-api</artifactId>
        <version>2.2</version>
      </dependency>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-test</artifactId>
        <version>${springboot.version}</version>
        <scope>test</scope>
        <exclusions>
          <exclusion>
            <groupId>org.junit.vintage</groupId>
            <artifactId>junit-vintage-engine</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
      <dependency>
        <groupId>org.apache.commons</groupId>
        <artifactId>commons-lang3</artifactId>
        <version>${commons-lang3.version}</version>
      </dependency>
      <dependency>
        <groupId>commons-io</groupId>
        <artifactId>commons-io</artifactId>
        <version>${commons-io.version}</version>
      </dependency>
      <dependency>
        <groupId>org.apache.commons</groupId>
        <artifactId>commons-collections4</artifactId>
        <version>${commons-collections4.version}</version>
      </dependency>
      <dependency>
        <groupId>io.springfox</groupId>
        <artifactId>springfox-swagger2</artifactId>
        <version>${springfox.version}</version>
      </dependency>
      <dependency>
        <groupId>io.springfox</groupId>
        <artifactId>springfox-swagger-ui</artifactId>
        <version>${springfox.version}</version>
      </dependency>
      <dependency>
        <groupId>com.google.guava</groupId>
        <artifactId>guava</artifactId>
        <version>${guava.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>collections</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-authority-common</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-region</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-common</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-uap-common</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-file-core</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-dingding-api</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-uap-dingtalk</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-autoconfigure</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-security-core</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-security-mp</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-security-web</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-security-oauth2-core</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-security-oauth2-client</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-security-oauth2-resource</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-oauth2-resource-server-spring-boot-starter</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-oauth2-client-spring-boot-starter</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-security-spring-boot-starter</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-file-spring-boot-starter</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-multi-datasource</artifactId>
        <version>${dm.version}</version>
      </dependency>
      <dependency>
        <groupId>com.dm</groupId>
        <artifactId>dm-multi-datasource-jpa-support</artifactId>
